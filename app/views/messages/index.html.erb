<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<%= form_for(@message) do |f| %>

 <ul>
   
      <label><span>名前:</span>
      <%= f.text_field :name %></label>

    <p>    
      <label><span>内容:</span>
      <%= f.text_area :body %></label>
    </p>

    <p>
        <span><%= f.submit class: "btn btn-sm btn-primary" %></span>
    </p>
    
  </ul>

<% end %>
