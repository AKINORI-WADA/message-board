<%= form_for(@message, html:{class:'form-horizontal'}) do |f| %>  <%#= =>

  <div class="form-group">  <%#= =>
   <%= f.label :name, "名前", class:"col-md-2 control-label" %>
    <div class="col-md-10">
        <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, "内容", class:"col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
   <%= f.label :age, "年齢", class:"col-md-2 control-label" %>
    <div class="col-md-10">
        <%= f.text_field :age, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>

<% end %>